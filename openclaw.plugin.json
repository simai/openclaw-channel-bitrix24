{
  "id": "openclaw-channel-bitrix24",
  "name": "Bitrix24 Channel",
  "description": "Bitrix24 channel plugin for OpenClaw",
  "version": "0.1.0",
  "channels": ["bitrix24"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "required": [],
    "properties": {
      "mode": {
        "type": "string",
        "enum": ["direct", "channel"],
        "default": "direct",
        "description": "Transport mode: direct bridge call or hub/edge channel mode."
      },
      "direct": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "bridgeUrl": { "type": "string", "minLength": 1 },
          "bridgeToken": { "type": "string" },
          "timeoutMs": { "type": "integer", "minimum": 1000, "maximum": 120000, "default": 45000 },
          "domain": { "type": "string" },
          "accessToken": { "type": "string" },
          "webhookPath": { "type": "string", "minLength": 1, "default": "/bitrix24/webhook" }
        }
      },
      "channel": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "hubUrl": { "type": "string", "minLength": 1 },
          "channelToken": { "type": "string" },
          "tenantChannelId": { "type": "string", "minLength": 1 },
          "timeoutMs": { "type": "integer", "minimum": 1000, "maximum": 120000, "default": 45000 }
        },
        "required": ["hubUrl", "tenantChannelId"]
      }
    },
    "allOf": []
  },
  "uiHints": {
    "plugins.entries.openclaw-channel-bitrix24.config.mode": {
      "label": "Connection mode",
      "help": "direct = bridge path and/or plugin webhook path; channel = route through Hub/Edge."
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.bridgeUrl": {
      "label": "Direct bridge URL",
      "placeholder": "https://bridge.example.com/v1/inbound"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.bridgeToken": {
      "label": "Direct bridge token",
      "sensitive": true
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.timeoutMs": {
      "label": "Direct timeout (ms)"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.domain": {
      "label": "Default Bitrix domain",
      "placeholder": "portal.simai.ru"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.accessToken": {
      "label": "Default Bitrix access token",
      "sensitive": true
    },
    "plugins.entries.openclaw-channel-bitrix24.config.direct.webhookPath": {
      "label": "Plugin webhook path",
      "placeholder": "/bitrix24/webhook"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.channel.hubUrl": {
      "label": "Hub URL",
      "placeholder": "https://hub.example.com/v1/channel/inbound"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.channel.channelToken": {
      "label": "Channel token",
      "sensitive": true
    },
    "plugins.entries.openclaw-channel-bitrix24.config.channel.tenantChannelId": {
      "label": "Tenant channel id"
    },
    "plugins.entries.openclaw-channel-bitrix24.config.channel.timeoutMs": {
      "label": "Channel timeout (ms)"
    }
  }
}
